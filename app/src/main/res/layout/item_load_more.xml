<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:foreground="?android:selectableItemBackground"
    android:layout_marginVertical="15dp"
    android:background="@drawable/gradient_background_item_result"
    android:minHeight="110dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon_load_more"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:elevation="2dp"
        android:background="@drawable/load_more_1"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon_load_more_2"
        android:layout_width="60dp"
        android:elevation="1dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/load_more_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/icon_load_more"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon_load_more_3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/ic_load_more"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/icon_load_more_2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/total_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:lineSpacingExtra="4sp"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/icon_load_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon_load_more_3"
        app:layout_constraintTop_toTopOf="@+id/icon_load_more"
        tools:text="54 Thai Thinh" />

    <TextView
        android:id="@+id/item_see_more"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:lineSpacingExtra="4sp"
        android:text="@string/load_more"
        android:textColor="#ffffff"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_load_more" />

</androidx.constraintlayout.widget.ConstraintLayout>