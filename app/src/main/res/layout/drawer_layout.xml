<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="222dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_def_assistant"
        android:layout_width="205dp"
        android:background="@drawable/background_8dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_collapse"
        android:layout_width="17dp"
        android:background="@drawable/fradient_background_collapse"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@+id/recycler_view_def_assistant" />

    <View
        android:layout_width="7dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_collapse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/view_collapse"
        app:layout_constraintStart_toStartOf="@id/view_collapse"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>